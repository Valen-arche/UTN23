<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificá la predicción</h4>
            <form action="/admin/predicciones/modificar" method="post">
          <input type="hidden"value="{{prediccion.id}}" name="id" >
                </input>
            <div class="mb-3 row">
                <input type="text" class="form-control"
               value="{{prediccion.user}}" placeholder="Nombre" name="user" >
                </input>

            </div>
<div class="mb-3 row"> 
    <textarea type="text" class="form-control"  placeholder="Prediccion" name="body">{{prediccion.body}}

    </textarea>
</div>
<button type="submit" class="btn btn-primary">Modificar

</button>
            </form>
            {{#if error}}
        <p> {{message}} </p>
{{/if}}
        </div>
    </div>
</div>